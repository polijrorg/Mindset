model Course {
  id             String   @id @default(uuid())
  name           String?
  description    String
  introVideo     String
  numberOfVideos Int
  rating         Float
  price          Int?
  avatar         String?
  videoClasses   Video[]
  createdBy      String?
  UserId         User     @relation(fields: [userId], references: [id])
  userId         String
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now())

  @@map("course")
}

model Video {
  id   String @id @default(uuid())
  name String

  Course   Course? @relation(fields: [courseId], references: [id])
  courseId String?
}

model User {
  id     String   @id
  Course Course[]
}
