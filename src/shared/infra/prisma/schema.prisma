datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  id             String   @id @default(uuid())
  name           String?
  numberOfVideos Int
  avatar         String?
  createdBy      String
  rating         Int
  description    String
  videoClasses   Video[]
  UserId         User     @relation(fields: [userId], references: [id])
  created_at     DateTime @default(now())
  userId         String
  introVideo     String
  price          Int?
  updated_at     DateTime @default(now())

  @@map("course")
}

model Video {
  id       String  @id @default(uuid())
  name     String
  Course   Course? @relation(fields: [courseId], references: [id])
  courseId String?
}

model User {
  id         String   @id @default(uuid())
  Course     Course[]
  name       String
  email      String   @unique
  password   String
  avatar     String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("user")
}